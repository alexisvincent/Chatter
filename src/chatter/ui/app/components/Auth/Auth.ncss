.auth {
  display: flex;
  align-items: center;
  justify-content: center;

  width: 100%;
  height: 100%;
}

.input {
  outline: none;
  padding: 5px 10px 5px 10px;
}

.button {
  padding: 5px 10px 5px 10px;
  background: #2980b9;
  cursor: pointer;
  box-shadow: 0 1px 0 rgba(0, 0, 0, 0.16);
  margin-left: 5px;

  & p {
    color: white;
  }
}